---
import '@fontsource/inter/400.css';
import '@fontsource/inter/700.css';
import '../styles/global.css';
import Nav from '../components/svelte/Nav.svelte';
import Footer from '../components/svelte/Footer.svelte'; 
import { ClientRouter } from 'astro:transitions';

const currentPath = Astro.url.pathname;

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Luis Gaviria | Senior Software Engineer",
  description = "Senior Developer bridging 20 years of professional operations with high-performance software engineering. Expert in systems architecture and backend logic."
} = Astro.props;
---

<html lang="en">
  <head>
    <ClientRouter />
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    
    <title>{title}</title>
    <meta name="description" content={description} />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={Astro.url} />

    <script is:inline>
      const setDarkMode = () => {
        const theme = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
        document.documentElement.classList[theme === 'dark' ? 'add' : 'remove']('dark');
      };
      setDarkMode();
      document.addEventListener('astro:after-swap', setDarkMode);
    </script>

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Luis Gaviria",
        "jobTitle": "Senior Software Engineer",
        "description": "Senior Developer specializing in translating complex business operations into high-performance software systems.",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Boston",
          "addressRegion": "MA"
        },
        "url": "https://luisgaviria.dev",
        "sameAs": [
          "https://github.com/luisgaviria",
          "https://www.linkedin.com/in/luisfgaviria/"
        ],
        "knowsAbout": ["Backend Engineering", "Systems Architecture", "Svelte", "Astro", "Go", "Operational Logic"]
      }
    </script>
  </head>
  
  <body class="bg-[#fafafa] dark:bg-[#050505] text-slate-950 dark:text-white font-['Inter',sans-serif] selection:bg-slate-900 selection:text-white antialiased transition-colors duration-500">
    
    <Nav client:load currentPath={currentPath} />
    
    <div class="flex flex-col min-h-screen">
      <main class="flex-grow max-w-6xl mx-auto px-6 pt-24 pb-16 lg:pt-28">
        <slot />
      </main>

      <Footer client:visible /> 
    </div>

    <style is:global>
      .stroke-text { 
        -webkit-text-stroke: 2px #111827; 
        color: transparent;
      }
      
      .dark .stroke-text { 
        -webkit-text-stroke: 2px #3f3f46; 
      }

      @media print {
        .stroke-text { 
          -webkit-text-stroke: 0px !important; 
          color: black !important; 
        }
        nav, footer, .print-hidden { 
          display: none !important; 
        }
        body { background-color: white !important; color: black !important; }
        main { padding: 0 !important; max-width: 100% !important; }
      }
    </style>
  </body>
</html>