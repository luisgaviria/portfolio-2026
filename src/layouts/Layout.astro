---
import '@fontsource/inter/400.css';
import '@fontsource/inter/700.css';
const currentPath = Astro.url.pathname;
import '../styles/global.css';
import Nav from '../components/svelte/Nav.svelte';
import Footer from '../components/svelte/Footer.svelte'; 
import { ClientRouter } from 'astro:transitions';

interface Props {
  title?: string;
}

const { title = "Luis Gaviria | Senior Software Engineer" } = Astro.props;
---

<html lang="en">
  <head>
    <ClientRouter />
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>


    <script is:inline>
      const setDarkMode = () => {
        const theme = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
        document.documentElement.classList[theme === 'dark' ? 'add' : 'remove']('dark');
      };
      setDarkMode();
      document.addEventListener('astro:after-swap', setDarkMode);
    </script>
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "Person",
				"name": "Luis Gaviria",
				"jobTitle": "Senior Developer",
				"description": "Expert in high-scale real estate systems and backend engineering with 20 years of industry experience.",
				"address": {
					"@type": "PostalAddress",
					"addressLocality": "Boston",
					"addressRegion": "MA"
				},
				"url": "https://your-portfolio.com",
				"sameAs": [
					"https://github.com/luisgaviria",
					"https://linkedin.com/in/your-profile"
				],
				"knowsAbout": ["Backend Engineering", "Real Estate Systems", "Svelte", "Astro", "Go", "Real Estate Rentals"]
			}
		</script>
  </head>
  
  <body class="bg-[#fafafa] dark:bg-[#050505] text-slate-950 dark:text-white font-['Inter',sans-serif] selection:bg-slate-900 selection:text-white antialiased transition-colors duration-500">
    
    <Nav client:load currentPath={currentPath} />
    
    <div class="flex flex-col min-h-screen">
      <main class="flex-grow max-w-6xl mx-auto px-6 pt-28 pb-20 lg:pt-28">
        <slot />
      </main>

      <Footer client:visible /> 
    </div>

    <style is:global>
      .stroke-text { 
        -webkit-text-stroke: 2px #111827; 
        color: transparent;
      }
      
      .dark .stroke-text { 
        -webkit-text-stroke: 2px #3f3f46; 
      }

      @media print {
        .stroke-text { 
          -webkit-text-stroke: 0px !important; 
          color: black !important; 
        }
        nav, footer, .print-hidden { 
          display: none !important; 
        }
        body { background-color: white !important; color: black !important; }
        /* Remove top padding for the PDF/Print version */
        main { padding: 0 !important; max-width: 100% !important; }
      }
    </style>
  </body>
</html>